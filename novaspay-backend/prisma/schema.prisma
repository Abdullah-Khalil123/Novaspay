generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int       @id @default(autoincrement())
  email           String    @unique
  password        String
  name            String?

  totalReviews    Int       @default(0)
  lastActive      DateTime?
  
  @@index([email])
}

model Transaction {
  id              Int       @id @default(autoincrement())
  orderId         String?
  accountName     String?
  paymentAccount  String?
  receiverName    String?
  receiverNumber  String?
  amount          Float?
  fee             Float?
  status          String?
  orderType       String?
  reason          String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
}